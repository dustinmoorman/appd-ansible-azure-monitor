accounts:
  - displayName: "{{ azure_monitor_accounts_display_name }}"
    credentials:
         subscriptionId: "{{ azure_subscription_id }}"
         client: "{{ azure_client_id }}"
         tenant: "{{ azure_tenant_id }}"
         secret: "{{ azure_secret }}"

    services:
       - resourceGroups: ["{{ azure_services_resource_groups }}"]  # Please put the required resourceGroups only
         serviceName: "Virtual machine"
         regions: [".*"]
         serviceInstances: [".*"]



